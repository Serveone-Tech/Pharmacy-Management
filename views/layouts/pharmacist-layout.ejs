<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title || 'Pharmacist Panel' %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/pharmacist.css" />
  </head>
  <body class="bg-light">
    <div class="d-flex">
      <!-- SIDEBAR -->
      <aside class="bg-success text-white p-3 sidebar" style="width: 240px ">
        <h5 class="mb-4"><i class="fas fa-pills me-2"></i> Pharmacy</h5>

        <ul class="nav flex-column gap-1">
          <li class="nav-item">
            <a href="/pharmacist/dashboard" class="nav-link text-white">
              <i class="fas fa-home me-2"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a href="/pharmacist/sales" class="nav-link text-white">
              <i class="fas fa-cash-register me-2"></i> POS
            </a>
          </li>
          <li class="nav-item">
            <a href="/pharmacist/inventory" class="nav-link text-white">
              <i class="fas fa-boxes me-2"></i> Inventory
            </a>
          </li>
          <li class="nav-item">
            <a href="/pharmacist/invoices" class="nav-link text-white">
              <i class="fas fa-file-invoice me-2"></i> Invoices
            </a>
          </li>
          <li class="nav-item">
            <a href="/pharmacist/reports" class="nav-link text-white">
              <i class="fas fa-chart-bar me-2"></i> Reports
            </a>
          </li>
          <li class="nav-item">
            <a href="/pharmacist/profile" class="nav-link text-white">
              <i class="fas fa-user me-2"></i> Profile
            </a>
          </li>
          <li class="nav-item mt-3">
            <a href="/auth/logout" class="nav-link text-warning">
              <i class="fas fa-sign-out-alt me-2"></i> Logout
            </a>
          </li>
        </ul>
      </aside>

      <!-- MAIN -->
      <div class="flex-grow-1">
        <!-- TOPBAR -->
        <!-- <nav class="navbar navbar-light bg-white border-bottom px-4">
          <span class="navbar-text">
            Welcome, <strong><%= user.full_name %></strong>
          </span>
        </nav> -->

        <!-- PAGE CONTENT -->
        <main class="p-4"><%- body %></main>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
