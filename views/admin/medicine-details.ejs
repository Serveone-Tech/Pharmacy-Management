<h2 class="mb-1">
    <i class="fas fa-capsules me-2"></i> Medicine Details
</h2>
<p class="text-muted mb-4">
    View and update details for <strong><%= medicine.medicine_name %></strong>
</p>

<!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show">
        <%= success_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show">
        <%= error_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div class="card mb-4">
    <div class="card-header">
        <h5>
            <i class="fas fa-info-circle me-2"></i> Medicine Information
        </h5>
    </div>

    <div class="card-body">
        <form method="POST" action="/admin/medicines/<%= medicine.id %>/update">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Medicine Name *</label>
                    <input
                        class="form-control"
                        name="medicine_name"
                        value="<%= medicine.medicine_name %>"
                        required
                    >
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Medicine Type *</label>
                    <input
                        class="form-control"
                        name="medicine_type"
                        value="<%= medicine.medicine_type %>"
                        required
                    >
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Buying Price *</label>
                    <input
                        type="number"
                        step="0.01"
                        class="form-control"
                        name="buying_price"
                        value="<%= medicine.buying_price %>"
                        required
                    >
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Selling Price *</label>
                    <input
                        type="number"
                        step="0.01"
                        class="form-control"
                        name="selling_price"
                        value="<%= medicine.selling_price %>"
                        required
                    >
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Stock Quantity *</label>
                    <input
                        type="number"
                        class="form-control"
                        name="stock_quantity"
                        value="<%= medicine.stock_quantity %>"
                        required
                    >
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Company *</label>
                    <select class="form-select" name="company_id" required>
                        <% companies.forEach(c => { %>
                            <option
                                value="<%= c.id %>"
                                <%= medicine.company_id == c.id ? 'selected' : '' %>
                            >
                                <%= c.company_name %>
                            </option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Manufacture Date</label>
                    <input
                        type="date"
                        class="form-control"
                        name="manufacture_date"
                        value="<%= medicine.manufacture_date ? new Date(medicine.manufacture_date).toISOString().split('T')[0] : '' %>"
                    >
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Expiry Date</label>
                    <input
                        type="date"
                        class="form-control"
                        name="expiry_date"
                        value="<%= medicine.expiry_date ? new Date(medicine.expiry_date).toISOString().split('T')[0] : '' %>"
                    >
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea
                    class="form-control"
                    name="description"
                    rows="3"
                ><%= medicine.description || '' %></textarea>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <button class="btn btn-success">
                    <i class="fas fa-save me-2"></i> Update Medicine
                </button>
                <a href="/admin/medicines" class="btn btn-secondary">
                    Back
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>
            <i class="fas fa-history me-2"></i> Medicine History
        </h5>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p>
                    <strong>Added On:</strong><br>
                    <%= new Date(medicine.created_at).toLocaleDateString() %>
                    <small class="text-muted">
                        (<%= new Date(medicine.created_at).toLocaleTimeString() %>)
                    </small>
                </p>
            </div>

            <div class="col-md-6">
                <p>
                    <strong>Last Updated:</strong><br>
                    <%= new Date(medicine.updated_at).toLocaleDateString() %>
                    <small class="text-muted">
                        (<%= new Date(medicine.updated_at).toLocaleTimeString() %>)
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>
