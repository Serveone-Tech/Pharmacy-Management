<h2 class="mb-1">
    <i class="fas fa-tachometer-alt me-2"></i> Admin Dashboard
</h2>
<p class="text-muted mb-4">
    Welcome to the Pharmacy Management System Admin Panel
</p>

<!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show">
        <%= success_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show">
        <%= error_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<!-- STATS ROW 1 -->
<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4><%= stats.pharmacists %></h4>
                    <p class="mb-0">Total Pharmacists</p>
                </div>
                <i class="fas fa-user-md fa-2x"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4><%= stats.companies %></h4>
                    <p class="mb-0">Total Companies</p>
                </div>
                <i class="fas fa-building fa-2x"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4><%= stats.medicines %></h4>
                    <p class="mb-0">Total Medicines</p>
                </div>
                <i class="fas fa-pills fa-2x"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4>₹<%= stats.today_sales.toFixed(2) %></h4>
                    <p class="mb-0">Today's Sales</p>
                </div>
                <i class="fas fa-chart-line fa-2x"></i>
            </div>
        </div>
    </div>
</div>

<!-- STATS ROW 2 -->
<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card bg-secondary text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4>₹<%= stats.yesterday_sales.toFixed(2) %></h4>
                    <p class="mb-0">Yesterday's Sales</p>
                </div>
                <i class="fas fa-calendar-day fa-2x"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-dark text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4>₹<%= stats.last7days_sales.toFixed(2) %></h4>
                    <p class="mb-0">Last 7 Days Sales</p>
                </div>
                <i class="fas fa-calendar-week fa-2x"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-danger text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4><%= stats.total_invoices %></h4>
                    <p class="mb-0">Total Invoices</p>
                </div>
                <i class="fas fa-file-invoice fa-2x"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-dark">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4><%= stats.low_stock_count %></h4>
                    <p class="mb-0">Low Stock Items</p>
                </div>
                <i class="fas fa-exclamation-triangle fa-2x"></i>
            </div>
        </div>
    </div>
</div>

<!-- QUICK ACTIONS -->
<div class="card mt-4">
    <div class="card-header">
        <h5><i class="fas fa-cogs me-2"></i> Quick Actions</h5>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-md-2 mb-2">
                <a href="/admin/companies" class="btn btn-outline-primary w-100">Companies</a>
            </div>
            <div class="col-md-2 mb-2">
                <a href="/admin/medicines" class="btn btn-outline-success w-100">Medicines</a>
            </div>
            <div class="col-md-2 mb-2">
                <a href="/admin/pharmacists" class="btn btn-outline-info w-100">Pharmacists</a>
            </div>
            <div class="col-md-2 mb-2">
                <a href="/admin/inventory" class="btn btn-outline-warning w-100">Inventory</a>
            </div>
            <div class="col-md-2 mb-2">
                <a href="/admin/invoices" class="btn btn-outline-secondary w-100">Invoices</a>
            </div>
            <div class="col-md-2 mb-2">
                <a href="/admin/reports" class="btn btn-outline-dark w-100">Reports</a>
            </div>
        </div>
    </div>
</div>

<!-- LOW STOCK ALERT -->
<% if (stats.low_stock_count > 0) { %>
<div class="alert alert-warning mt-4">
    <h5 class="alert-heading">
        <i class="fas fa-exclamation-triangle me-2"></i> Low Stock Alert!
    </h5>
    <p class="mb-0">
        You have <%= stats.low_stock_count %> item(s) running low.
        <a href="/admin/inventory" class="alert-link">Check inventory</a>
    </p>
</div>
<% } %>
