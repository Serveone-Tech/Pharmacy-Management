<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="fas fa-pills me-2"></i>Pharmacy Management
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Welcome, <%= user.full_name %></span>
                <a class="nav-link" href="/auth/logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-12">
                <!-- Flash Messages -->
                <% if (success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <h2><i class="fas fa-file-invoice me-2"></i>Invoice Search</h2>
                <p class="text-muted">Search and view invoice details</p>

                <!-- Search Form -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" action="/admin/invoices">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                                        <input type="text" class="form-control" name="search" 
                                               placeholder="Search by invoice number or customer mobile..." 
                                               value="<%= search %>">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-grid gap-2 d-md-flex">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search me-2"></i>Search
                                        </button>
                                        <a href="/admin/invoices" class="btn btn-outline-secondary">
                                            <i class="fas fa-times me-2"></i>Clear
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Results -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <% if (search) { %>
                                Search Results for "<%= search %>" (<%= invoices.length %> found)
                            <% } else { %>
                                Recent Invoices (<%= invoices.length %>)
                            <% } %>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Invoice Number</th>
                                        <th>Customer</th>
                                        <th>Mobile</th>
                                        <th>Pharmacist</th>
                                        <th>Total Amount</th>
                                        <th>Payment Method</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (invoices.length > 0) { %>
                                        <% invoices.forEach(invoice => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= invoice.invoice_number %></strong>
                                                </td>
                                                <td><%= invoice.customer_name || 'Walk-in Customer' %></td>
                                                <td><%= invoice.customer_mobile || 'N/A' %></td>
                                                <td><%= invoice.pharmacist_name || 'N/A' %></td>
                                                <td>
                                                    <strong>₹<%= invoice.final_amount %></strong>
                                                    <% if (invoice.discount_amount > 0) { %>
                                                        <br><small class="text-muted">Discount: ₹<%= invoice.discount_amount %></small>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info"><%= invoice.payment_method %></span>
                                                </td>
                                                <td>
                                                    <%= new Date(invoice.invoice_date).toLocaleDateString() %>
                                                    <br><small class="text-muted"><%= new Date(invoice.created_at).toLocaleTimeString() %></small>
                                                </td>
                                                <td>
                                                    <a href="/admin/invoices/<%= invoice.id %>" class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-success" title="Print Invoice" onclick="window.open(\"/admin/invoices/<%= invoice.id %>/print\", \"_blank\");">
                                                        <i class="fas fa-print"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="8" class="text-center text-muted">
                                                <% if (search) { %>
                                                    No invoices found matching your search criteria
                                                <% } else { %>
                                                    No invoices found
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <% if (search && invoices.length > 0) { %>
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">Search Summary</h6>
                                        <p class="card-text">
                                            <strong><%= invoices.length %></strong> invoice(s) found<br>
                                            Total Value: <strong>₹<%= invoices.reduce((sum, inv) => sum + parseFloat(inv.final_amount), 0).toFixed(2) %></strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>