<h2 class="mb-1">
    <i class="fas fa-file-invoice me-2"></i> Invoice Search
</h2>
<p class="text-muted mb-4">
    Search and view invoice details
</p>

<!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show">
        <%= success_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show">
        <%= error_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<!-- SEARCH FORM -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/admin/invoices">
            <div class="row align-items-center">
                <div class="col-md-8 mb-2 mb-md-0">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input
                            type="text"
                            class="form-control"
                            name="search"
                            placeholder="Search by invoice number or customer mobile"
                            value="<%= search || '' %>"
                        >
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <button class="btn btn-primary me-2">
                        <i class="fas fa-search me-1"></i> Search
                    </button>
                    <a href="/admin/invoices" class="btn btn-outline-secondary">
                        Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- RESULTS -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <% if (search) { %>
                Search Results for "<%= search %>" (<%= invoices.length %>)
            <% } else { %>
                Recent Invoices (<%= invoices.length %>)
            <% } %>
        </h5>
    </div>

    <div class="card-body table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Invoice #</th>
                    <th>Customer</th>
                    <th>Mobile</th>
                    <th>Pharmacist</th>
                    <th>Amount</th>
                    <th>Payment</th>
                    <th>Date</th>
                    <th width="120">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (invoices.length > 0) { %>
                    <% invoices.forEach(inv => { %>
                        <tr>
                            <td><strong><%= inv.invoice_number %></strong></td>
                            <td><%= inv.customer_name || 'Walk-in Customer' %></td>
                            <td><%= inv.customer_mobile || 'N/A' %></td>
                            <td><%= inv.pharmacist_name || 'N/A' %></td>
                            <td>
                                <strong>₹<%= inv.final_amount %></strong>
                                <% if (inv.discount_amount > 0) { %>
                                    <br>
                                    <small class="text-muted">
                                        Discount: ₹<%= inv.discount_amount %>
                                    </small>
                                <% } %>
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    <%= inv.payment_method %>
                                </span>
                            </td>
                            <td>
                                <%= new Date(inv.invoice_date).toLocaleDateString() %><br>
                                <small class="text-muted">
                                    <%= new Date(inv.created_at).toLocaleTimeString() %>
                                </small>
                            </td>
                            <td>
                                <a
                                    href="/admin/invoices/<%= inv.id %>"
                                    class="btn btn-sm btn-outline-primary"
                                    title="View"
                                >
                                    <i class="fas fa-eye"></i>
                                </a>

                                <button
                                    type="button"
                                    class="btn btn-sm btn-outline-success"
                                    title="Print"
                                    onclick="window.open('/admin/invoices/<%= inv.id %>/print','_blank')"
                                >
                                    <i class="fas fa-print"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="8" class="text-center text-muted">
                            <% if (search) { %>
                                No invoices found for your search
                            <% } else { %>
                                No invoices available
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- SEARCH SUMMARY -->
<% if (search && invoices.length > 0) { %>
<div class="row mt-3">
    <div class="col-md-6">
        <div class="card bg-light">
            <div class="card-body">
                <h6>Search Summary</h6>
                <p class="mb-0">
                    <strong><%= invoices.length %></strong> invoice(s)<br>
                    Total Value:
                    <strong>
                        ₹<%= invoices
      .reduce((s,i)=> s + Number(i.final_amount), 0)
      .toFixed(2) %>
                    </strong>
                </p>
            </div>
        </div>
    </div>
</div>
<% } %>
