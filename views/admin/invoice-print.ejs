<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Invoice #<%= invoice.invoice_number %></title>

    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            margin: 0;
            padding: 20px;
        }

        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #ddd;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        td, th {
            padding: 6px;
            font-size: 12px;
        }

        .text-right {
            text-align: right;
        }

        .heading th {
            background: #f0f0f0;
            border-bottom: 1px solid #ccc;
        }

        .item td {
            border-bottom: 1px solid #eee;
        }

        .total-row td {
            border-top: 2px solid #ccc;
            font-weight: bold;
        }

        @media print {
            body {
                padding: 0;
            }
            .invoice-box {
                border: none;
            }
        }
    </style>
</head>

<body onload="window.print()">

<div class="invoice-box">
    <table>
        <tr>
            <td colspan="4">
                <table>
                    <tr>
                        <td>
                            <h2>Pharmacy</h2>
                        </td>
                        <td class="text-right">
                            <strong>Invoice #:</strong> <%= invoice.invoice_number %><br>
                            <strong>Date:</strong>
                            <%= new Date(invoice.invoice_date).toLocaleDateString() %><br>
                            <strong>Pharmacist:</strong>
                            <%= invoice.pharmacist_name || 'N/A' %>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

        <tr>
            <td colspan="4">
                <table>
                    <tr>
                        <td>
                            <strong>Customer:</strong><br>
                            <%= invoice.customer_name || 'Walk-in Customer' %><br>
                            <%= invoice.customer_mobile || 'N/A' %><br>
                            <%= invoice.customer_address || 'N/A' %>
                        </td>
                        <td class="text-right">
                            <strong>Payment:</strong><br>
                            <%= invoice.payment_method %>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

        <tr class="heading">
            <th>Item</th>
            <th class="text-right">Price</th>
            <th class="text-right">Qty</th>
            <th class="text-right">Total</th>
        </tr>

        <% invoice.items.forEach(item => { %>
        <tr class="item">
            <td><%= item.medicine_name %> (<%= item.medicine_type %>)</td>
            <td class="text-right">₹<%= Number(item.selling_price).toFixed(2) %></td>
            <td class="text-right"><%= item.quantity %></td>
            <td class="text-right">
                ₹<%= (Number(item.selling_price) * item.quantity).toFixed(2) %>
            </td>
        </tr>
        <% }) %>

        <tr class="total-row">
            <td colspan="3" class="text-right">Sub Total</td>
            <td class="text-right">₹<%= invoice.total_amount %></td>
        </tr>

        <tr>
            <td colspan="3" class="text-right">Discount</td>
            <td class="text-right">₹<%= invoice.discount_amount %></td>
        </tr>

        <tr class="total-row">
            <td colspan="3" class="text-right">Grand Total</td>
            <td class="text-right">₹<%= invoice.final_amount %></td>
        </tr>
    </table>

    <p style="text-align:center; margin-top:20px;">
        Thank you for your business!
    </p>
</div>

</body>
</html>
