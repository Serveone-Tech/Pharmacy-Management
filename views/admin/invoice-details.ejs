<style>
@media print {
    body * {
        visibility: hidden;
    }
    #invoice-print-area,
    #invoice-print-area * {
        visibility: visible;
    }
    #invoice-print-area {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
    }
    .no-print {
        display: none !important;
    }
}
</style>

<h2 class="mb-3 no-print">
    <i class="fas fa-file-invoice me-2"></i> Invoice Details
</h2>

<!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show no-print">
        <%= success_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show no-print">
        <%= error_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div id="invoice-print-area">
    <div class="card">
        <div class="card-header bg-light text-center">
            <h4 class="mb-0">
                <i class="fas fa-file-invoice me-2"></i> Invoice
            </h4>
            <p class="text-muted mb-0">
                Invoice #<%= invoice.invoice_number %>
            </p>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6>Customer Information</h6>
                    <p class="mb-1"><strong>Name:</strong> <%= invoice.customer_name %></p>
                    <p class="mb-1"><strong>Mobile:</strong> <%= invoice.customer_mobile %></p>
                    <p class="mb-1"><strong>Address:</strong> <%= invoice.customer_address || 'N/A' %></p>
                </div>

                <div class="col-md-6 text-md-end">
                    <h6>Invoice Information</h6>
                    <p class="mb-1">
                        <strong>Date:</strong>
                        <%= new Date(invoice.invoice_date).toLocaleDateString() %>
                    </p>
                    <p class="mb-1"><strong>Pharmacist:</strong> <%= invoice.pharmacist_name %></p>
                    <p class="mb-1"><strong>Payment:</strong> <%= invoice.payment_method %></p>
                </div>
            </div>

            <h6 class="mb-3">Medicine Details</h6>

            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Medicine</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Qty</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% invoice.items.forEach((item, i) => { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= item.medicine_name %></td>
                                <td><%= item.medicine_type %></td>
                                <td>₹<%= Number(item.selling_price).toFixed(2) %></td>
                                <td><%= item.quantity %></td>
                                <td>
                                    ₹<%= (Number(item.selling_price) * item.quantity).toFixed(2) %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="5" class="text-end">Sub Total</th>
                            <th>₹<%= invoice.total_amount %></th>
                        </tr>
                        <tr>
                            <th colspan="5" class="text-end">Discount</th>
                            <th>- ₹<%= invoice.discount_amount %></th>
                        </tr>
                        <tr>
                            <th colspan="5" class="text-end">Grand Total</th>
                            <th>₹<%= invoice.final_amount %></th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <p class="text-center mt-4 text-muted">
                Thank you for your business!
            </p>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center gap-2 mt-4 no-print">
    <button class="btn btn-success" onclick="window.print()">
        <i class="fas fa-print me-2"></i> Print
    </button>

    <a href="/admin/invoices" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back
    </a>
</div>
