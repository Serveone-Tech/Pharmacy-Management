<h2 class="mb-3">
    <i class="fas fa-user-md me-2"></i> Pharmacist Details
</h2>

<!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show">
        <%= success_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show">
        <%= error_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-id-badge me-2"></i> Pharmacist Information
        </h5>
    </div>

    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-4 fw-bold">Full Name</div>
            <div class="col-md-8"><%= pharmacist.full_name %></div>
        </div>

        <div class="row mb-2">
            <div class="col-md-4 fw-bold">Email</div>
            <div class="col-md-8"><%= pharmacist.email %></div>
        </div>

        <div class="row mb-2">
            <div class="col-md-4 fw-bold">Mobile</div>
            <div class="col-md-8"><%= pharmacist.mobile %></div>
        </div>

        <div class="row mb-2">
            <div class="col-md-4 fw-bold">Address</div>
            <div class="col-md-8"><%= pharmacist.address || 'N/A' %></div>
        </div>

        <div class="row mb-2">
            <div class="col-md-4 fw-bold">Role</div>
            <div class="col-md-8">
                <span class="badge bg-info">
                    <%= pharmacist.role %>
                </span>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-md-4 fw-bold">Status</div>
            <div class="col-md-8">
                <% if (pharmacist.is_active) { %>
                    <span class="badge bg-success">Active</span>
                <% } else { %>
                    <span class="badge bg-danger">Inactive</span>
                <% } %>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-md-4 fw-bold">Created At</div>
            <div class="col-md-8">
                <%= new Date(pharmacist.created_at).toLocaleString() %>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 fw-bold">Last Updated</div>
            <div class="col-md-8">
                <%= new Date(pharmacist.updated_at).toLocaleString() %>
            </div>
        </div>
    </div>

    <div class="card-footer text-end">
        <a href="/admin/pharmacists" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back
        </a>

        <button
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#editPharmacistModal<%= pharmacist.id %>"
        >
            <i class="fas fa-edit me-1"></i> Edit
        </button>
    </div>
</div>

<!-- EDIT MODAL -->
<div class="modal fade" id="editPharmacistModal<%= pharmacist.id %>" tabindex="-1">
    <div class="modal-dialog">
        <form
            class="modal-content"
            method="POST"
            action="/admin/pharmacists/<%= pharmacist.id %>/update"
        >
            <div class="modal-header">
                <h5 class="modal-title">
                    Edit Pharmacist
                </h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Full Name *</label>
                    <input
                        class="form-control"
                        name="full_name"
                        value="<%= pharmacist.full_name %>"
                        required
                    >
                </div>

                <div class="mb-3">
                    <label class="form-label">Email *</label>
                    <input
                        type="email"
                        class="form-control"
                        name="email"
                        value="<%= pharmacist.email %>"
                        required
                    >
                </div>

                <div class="mb-3">
                    <label class="form-label">Mobile *</label>
                    <input
                        class="form-control"
                        name="mobile"
                        value="<%= pharmacist.mobile %>"
                        required
                    >
                </div>

                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <textarea
                        class="form-control"
                        name="address"
                        rows="3"
                    ><%= pharmacist.address || '' %></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button class="btn btn-primary">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>
