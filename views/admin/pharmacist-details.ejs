<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="fas fa-pills me-2"></i>Pharmacy Management
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Welcome, <%= user.full_name %></span>
                <a class="nav-link" href="/auth/logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <!-- Flash Messages -->
                <% if (success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fas fa-user-md me-2"></i>Pharmacist Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Full Name:</strong></div>
                            <div class="col-md-8"><%= pharmacist.full_name %></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Email:</strong></div>
                            <div class="col-md-8"><%= pharmacist.email %></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Mobile:</strong></div>
                            <div class="col-md-8"><%= pharmacist.mobile %></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Address:</strong></div>
                            <div class="col-md-8"><%= pharmacist.address || 'N/A' %></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Role:</strong></div>
                            <div class="col-md-8"><span class="badge bg-info"><%= pharmacist.role %></span></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Status:</strong></div>
                            <div class="col-md-8">
                                <% if (pharmacist.is_active) { %>
                                    <span class="badge bg-success">Active</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Inactive</span>
                                <% } %>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Created At:</strong></div>
                            <div class="col-md-8"><%= new Date(pharmacist.created_at).toLocaleString() %></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Last Updated:</strong></div>
                            <div class="col-md-8"><%= new Date(pharmacist.updated_at).toLocaleString() %></div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <a href="/admin/pharmacists" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Pharmacists</a>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editPharmacistModal<%= pharmacist.id %>">
                            <i class="fas fa-edit me-2"></i>Edit Pharmacist
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Pharmacist Modal -->
    <div class="modal fade" id="editPharmacistModal<%= pharmacist.id %>" tabindex="-1" aria-labelledby="editPharmacistModalLabel<%= pharmacist.id %>" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editPharmacistModalLabel<%= pharmacist.id %>">Edit Pharmacist: <%= pharmacist.full_name %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/pharmacists/<%= pharmacist.id %>/update" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="edit_full_name<%= pharmacist.id %>" class="form-label">Full Name *</label>
                            <input type="text" class="form-control" id="edit_full_name<%= pharmacist.id %>" name="full_name" value="<%= pharmacist.full_name %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="edit_email<%= pharmacist.id %>" class="form-label">Email Address *</label>
                            <input type="email" class="form-control" id="edit_email<%= pharmacist.id %>" name="email" value="<%= pharmacist.email %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="edit_mobile<%= pharmacist.id %>" class="form-label">Mobile Number *</label>
                            <input type="tel" class="form-control" id="edit_mobile<%= pharmacist.id %>" name="mobile" value="<%= pharmacist.mobile %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="edit_address<%= pharmacist.id %>" class="form-label">Address</label>
                            <textarea class="form-control" id="edit_address<%= pharmacist.id %>" name="address" rows="3"><%= pharmacist.address || '' %></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

