<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="fas fa-pills me-2"></i>Pharmacy Management
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Welcome, <%= user.full_name %></span>
                <a class="nav-link" href="/auth/logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-12">
                <!-- Flash Messages -->
                <% if (success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2><i class="fas fa-user-md me-2"></i>Manage Pharmacists</h2>
                        <p class="text-muted">Add and manage pharmacist accounts</p>
                    </div>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPharmacistModal">
                        <i class="fas fa-plus me-2"></i>Add Pharmacist
                    </button>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Address</th>
                                        <th>Created Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (pharmacists.length > 0) { %>
                                        <% pharmacists.forEach(pharmacist => { %>
                                            <tr>
                                                <td><strong><%= pharmacist.full_name %></strong></td>
                                                <td><%= pharmacist.email %></td>
                                                <td><%= pharmacist.mobile %></td>
                                                <td><%= pharmacist.address || 'N/A' %></td>
                                                <td><%= new Date(pharmacist.created_at).toLocaleDateString() %></td>
                                                <td>
                                                    <% if (pharmacist.is_active) { %>
                                                        <span class="badge bg-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Inactive</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/pharmacists/<%= pharmacist.id %>" class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-primary" title="Edit" data-bs-toggle="modal" data-bs-target="#editPharmacistModal<%= pharmacist.id %>">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <% if (pharmacist.is_active) { %>
                                                        <form action="/admin/pharmacists/<%= pharmacist.id %>/deactivate" method="POST" class="d-inline" onsubmit="return confirm(\'Are you sure you want to deactivate this pharmacist?\');">
                                                            <button type="submit" class="btn btn-sm btn-outline-warning" title="Deactivate">
                                                                <i class="fas fa-ban"></i>
                                                            </button>
                                                        </form>
                                                    <% } else { %>
                                                        <form action="/admin/pharmacists/<%= pharmacist.id %>/activate" method="POST" class="d-inline" onsubmit="return confirm(\'Are you sure you want to activate this pharmacist?\');">
                                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Activate">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center text-muted">No pharmacists found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Pharmacist Modal -->
    <div class="modal fade" id="addPharmacistModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Pharmacist</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/pharmacists">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="full_name" class="form-label">Full Name *</label>
                            <input type="text" class="form-control" id="full_name" name="full_name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address *</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="mobile" class="form-label">Mobile Number *</label>
                            <input type="tel" class="form-control" id="mobile" name="mobile" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password *</label>
                            <input type="password" class="form-control" id="password" name="password" minlength="6" required>
                            <div class="form-text">Password must be at least 6 characters long.</div>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <textarea class="form-control" id="address" name="address" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Pharmacist</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Pharmacist Modal -->
	<% if (pharmacists.length > 0) { %>
		<% pharmacists.forEach(pharmacist => { %>
    <div class="modal fade" id="editPharmacistModal<%= pharmacist.id %>" tabindex="-1" aria-labelledby="editPharmacistModalLabel<%= pharmacist.id %>" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editPharmacistModalLabel<%= pharmacist.id %>">Edit Pharmacist: <%= pharmacist.full_name %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/pharmacists/<%= pharmacist.id %>/update" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="edit_full_name<%= pharmacist.id %>" class="form-label">Full Name *</label>
                            <input type="text" class="form-control" id="edit_full_name<%= pharmacist.id %>" name="full_name" value="<%= pharmacist.full_name %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="edit_email<%= pharmacist.id %>" class="form-label">Email Address *</label>
                            <input type="email" class="form-control" id="edit_email<%= pharmacist.id %>" name="email" value="<%= pharmacist.email %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="edit_mobile<%= pharmacist.id %>" class="form-label">Mobile Number *</label>
                            <input type="tel" class="form-control" id="edit_mobile<%= pharmacist.id %>" name="mobile" value="<%= pharmacist.mobile %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="edit_address<%= pharmacist.id %>" class="form-label">Address</label>
                            <textarea class="form-control" id="edit_address<%= pharmacist.id %>" name="address" rows="3"><%= pharmacist.address || '' %></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
		<% }); %>
	<% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>