<h2 class="mb-1">
    <i class="fas fa-boxes me-2"></i> Medicine Inventory
</h2>
<p class="text-muted mb-4">
    Monitor stock levels and manage inventory
</p>

<!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show">
        <%= success_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show">
        <%= error_msg %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<!-- ALERTS -->
<% if (lowStockMedicines.length > 0 || expiredMedicines.length > 0) { %>
<div class="row mb-4">
    <% if (lowStockMedicines.length > 0) { %>
        <div class="col-md-6">
            <div class="alert alert-warning">
                <h5 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i> Low Stock Alert
                </h5>
                <p class="mb-0">
                    <%= lowStockMedicines.length %> medicine(s) running low.
                </p>
            </div>
        </div>
    <% } %>

    <% if (expiredMedicines.length > 0) { %>
        <div class="col-md-6">
            <div class="alert alert-danger">
                <h5 class="alert-heading">
                    <i class="fas fa-calendar-times me-2"></i> Expired Medicines
                </h5>
                <p class="mb-0">
                    <%= expiredMedicines.length %> medicine(s) expired.
                </p>
            </div>
        </div>
    <% } %>
</div>
<% } %>

<!-- TABS -->
<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#all">
            All Medicines (<%= medicines.length %>)
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#low">
            Low Stock (<%= lowStockMedicines.length %>)
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#expired">
            Expired (<%= expiredMedicines.length %>)
        </button>
    </li>
</ul>

<div class="tab-content">

    <!-- ALL MEDICINES -->
    <div class="tab-pane fade show active" id="all">
        <div class="card">
            <div class="card-body table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Medicine</th>
                            <th>Company</th>
                            <th>Type</th>
                            <th>Stock</th>
                            <th>Min</th>
                            <th>Price</th>
                            <th>Expiry</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (medicines.length > 0) { %>
                            <% medicines.forEach(m => { %>
                                <tr>
                                    <td><strong><%= m.medicine_name %></strong></td>
                                    <td><%= m.company_name || 'N/A' %></td>
                                    <td><span class="badge bg-secondary"><%= m.medicine_type %></span></td>
                                    <td>
                                        <span class="badge <%= m.quantity_in_stock <= m.min_stock_level ? 'bg-danger' : 'bg-success' %>">
                                            <%= m.quantity_in_stock %>
                                        </span>
                                    </td>
                                    <td><%= m.min_stock_level %></td>
                                    <td>₹<%= m.selling_price %></td>
                                    <td>
                                        <% if (m.expiry_date) { %>
                                            <%= new Date(m.expiry_date).toLocaleDateString() %>
                                        <% } else { %> N/A <% } %>
                                    </td>
                                    <td>
                                        <% if (m.quantity_in_stock <= m.min_stock_level) { %>
                                            <span class="badge bg-warning">Low</span>
                                        <% } else { %>
                                            <span class="badge bg-success">OK</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    No medicines found
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- LOW STOCK -->
    <div class="tab-pane fade" id="low">
        <div class="card">
            <div class="card-body table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Medicine</th>
                            <th>Company</th>
                            <th>Stock</th>
                            <th>Min</th>
                            <th>Shortage</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (lowStockMedicines.length > 0) { %>
                            <% lowStockMedicines.forEach(m => { %>
                                <tr>
                                    <td><strong><%= m.medicine_name %></strong></td>
                                    <td><%= m.company_name || 'N/A' %></td>
                                    <td class="text-danger"><%= m.quantity_in_stock %></td>
                                    <td><%= m.min_stock_level %></td>
                                    <td class="text-danger"><%= m.min_stock_level - m.quantity_in_stock %></td>
                                    <td>₹<%= m.selling_price %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center text-success">
                                    Stock levels are healthy
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- EXPIRED -->
    <div class="tab-pane fade" id="expired">
        <div class="card">
            <div class="card-body table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Medicine</th>
                            <th>Company</th>
                            <th>Batch</th>
                            <th>Expiry</th>
                            <th>Stock</th>
                            <th>Loss</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (expiredMedicines.length > 0) { %>
                            <% expiredMedicines.forEach(m => { %>
                                <tr>
                                    <td><strong><%= m.medicine_name %></strong></td>
                                    <td><%= m.company_name || 'N/A' %></td>
                                    <td><%= m.batch_number || 'N/A' %></td>
                                    <td class="text-danger">
                                        <%= new Date(m.expiry_date).toLocaleDateString() %>
                                    </td>
                                    <td><%= m.quantity_in_stock %></td>
                                    <td class="text-danger">
                                        ₹<%= (m.quantity_in_stock * m.buying_price).toFixed(2) %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center text-success">
                                    No expired medicines
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
