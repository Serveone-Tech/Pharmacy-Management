<style>
@media print {
    body * {
        visibility: hidden;
    }
    #invoice-print-area, #invoice-print-area * {
        visibility: visible;
    }
    #invoice-print-area {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
    }
    .no-print {
        display: none;
    }
}
</style>

<div class="row">
    <div class="col-md-10 mx-auto">

        <% if (success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success no-print">
                <%= success_msg %>
            </div>
        <% } %>

        <% if (error_msg && error_msg.length > 0) { %>
            <div class="alert alert-danger no-print">
                <%= error_msg %>
            </div>
        <% } %>

        <div id="invoice-print-area">
            <div class="card mb-4">
                <div class="card-header text-center bg-light">
                    <h4 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>
                        Invoice #<%= invoice.invoice_number %>
                    </h4>
                </div>

                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Customer</h6>
                            <p class="mb-1"><strong>Name:</strong> <%= invoice.customer_name %></p>
                            <p class="mb-1"><strong>Mobile:</strong> <%= invoice.customer_mobile %></p>
                            <p class="mb-1"><strong>Address:</strong> <%= invoice.customer_address || 'N/A' %></p>
                        </div>

                        <div class="col-md-6 text-md-end">
                            <h6>Invoice Info</h6>
                            <p class="mb-1"><strong>Date:</strong> <%= new Date(invoice.invoice_date).toLocaleDateString() %></p>
                            <p class="mb-1"><strong>Pharmacist:</strong> <%= invoice.pharmacist_name %></p>
                            <p class="mb-1"><strong>Payment:</strong> <%= invoice.payment_method %></p>
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Medicine</th>
                                <th>Type</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% invoice.items.forEach((item, i) => { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= item.medicine_name %></td>
                                    <td><%= item.medicine_type %></td>
                                    <td>₹<%= Number(item.selling_price).toFixed(2) %></td>
                                    <td><%= item.quantity %></td>
                                    <td>₹<%= (item.quantity * item.selling_price).toFixed(2) %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="5" class="text-end">Sub Total</th>
                                <th>₹<%= Number(invoice.sub_total || 0).toFixed(2) %></th>
                            </tr>
                            <tr>
                                <th colspan="5" class="text-end">Discount (<%= invoice.discount_percentage %>%)</th>
                                <th>- ₹<%= Number(invoice.discount_amount || 0).toFixed(2) %></th>
                            </tr>
                            <tr>
                                <th colspan="5" class="text-end">Grand Total</th>
                                <th>₹<%= Number(invoice.grand_total || 0).toFixed(2) %></th>
                            </tr>
                        </tfoot>
                    </table>

                    <p class="text-center mt-4 text-muted">
                        Thank you for your business!
                    </p>
                </div>
            </div>
        </div>

        <div class="text-center no-print">
            <button class="btn btn-success" onclick="window.print()">
                <i class="fas fa-print me-2"></i>Print
            </button>
            <a href="/pharmacist/invoices" class="btn btn-secondary">
                Back
            </a>
        </div>
    </div>
</div>
