                <% if (stats.low_stock_count > 0) { %>
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="alert alert-warning" role="alert">
                            <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Low Stock Alert!</h5>
                            <p class="mb-0">There are <%= stats.low_stock_count %> medicine(s) running low on stock. 
                            <a href="/pharmacist/inventory" class="alert-link">Check inventory</a> for details.</p>
                        </div>
                    </div>
                </div>
                <% } %>

                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-info-circle me-2"></i>Quick Tips</h5>
                            </div>
                            <div class="card-body">
